{
  "rules": {
    "users": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["email", "role"]
    },
    "projects": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["createdBy", "status", "createdAt", "date"]
    },
    "checklists": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["projectId"]
    },
    "shotItems": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["checklistId", "projectId", "assignedTo", "completed"]
    },
    "projectProgress": {
      ".read": "auth != null",
      ".write": "auth != null",
      ".indexOn": ["projectId", "userId"]
    }
  }
}
